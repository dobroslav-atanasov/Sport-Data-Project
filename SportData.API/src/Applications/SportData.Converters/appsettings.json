{
  "ConnectionStrings": {
    "SportDataConnectionString": "Server=.;Database=SportDataDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True",
    "OlympicGamesConnectionString": "Server=.;Database=OlympicGamesDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True",
    "CrawlerStorageConnectionString": "Server=.;Database=CrawlerStorageDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },
  "Converters": {
    "CountryConverter": "SportData.Crawlers.Countries.CountryDataCrawler"
  },
  "CrawlerSites": {
    "WorldCountries": {
      "MainUrl": "https://flagpedia.net",
      "CountriesUrl": "https://flagpedia.net/index",
      "ImageUrl": "https://flagcdn.com/w2560/"
    },
    "Olympedia": {
      "MainUrl": "https://www.olympedia.org/",
      "NOCUrl": "https://www.olympedia.org/countries",
      "GamesUrl": "https://www.olympedia.org/editions",
      "SportsUrl": "https://www.olympedia.org/sports",
      "VenuesUrl": "https://www.olympedia.org/venues/editions/"
    }
  },
  "Logging": {
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning"
      }
    },
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  },
  "FileLogging": {
    "PathFormat": "Logs/logs.txt",
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information"
    }
  },
  "Log4NetCore": {
    "Name": "Test",
    "LoggerRepository": "Fantastic",
    "OverrideCriticalLevelWith": "Fatal",
    "Watch": false,
    "UseWebOrAppConfig": false,
    "PropertyOverrides": [
      {
        "XPath": "/log4net/appender[@name='RollingFile']/file",
        "Attributes": {
          "Value": "Logs/log.txt"
        }
      },
      {
        "XPath": "/log4net/appender[@name='RollingFile']/maximumFileSize",
        "Attributes": {
          "Value": "10000KB"
        }
      },
      {
        "XPath": "/log4net/appender[@name='RollingFile']/file"
      }
    ]
  }
}